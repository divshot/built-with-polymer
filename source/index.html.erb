---
pageable: true
per_page: 8
---
<% set_meta_tags description: "Showcase of web apps and websites using Polymer." %>
<% page_articles.each_with_index do |article, i| %>
<div class="post">
  <div class="title horizontal layout center">
    <h1 class="flex"><%= link_to article.title, article.data.url, :target => "_blank" %></h1>
    <span class="date"><%= article.date.strftime("%B #{article.date.day.ordinalize}") %></span>
    <span class="divider">&bull;</span>
    <span class="comments"><%= link_to 'Comments', article.url + "#disqus_thread" %></span>
  </div>
  <div class="description"><%= article.body %></div>
  <div class="elements">
    <ul>
    <% tags = article.tags.take(10) %>
    <% tags.each do |tag| %>
      <li><%= link_to "#{tag}", tag_path(tag) %></li>
    <% end %>
      <% if article.tags.size > 10 %><li><%= link_to "and <b>#{article.tags.size - 10}</b> more custom elements...", article %></li><% end %>
    </ul>
  </div>
</div>
<% end %>

<% if paginate && num_pages > 1 %>
  <div class="pagination horizontal layout">
    <% if prev_page %>
      <div class="prev"><%= link_to '&laquo; Prev Page', prev_page %></div>
    <% end %>
    <div class="flex"></div>
    <% if next_page %>
      <div class="next"><%= link_to 'Next Page &raquo;', next_page %></div>
    <% end %>
  </div>
<% end %>